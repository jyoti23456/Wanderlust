            let currentBackgroundIndex = 0;
            const heroSection = document.querySelector('.hero');
            
            if (heroSection) {
                function changeHeroBackground() {
                    currentBackgroundIndex = (currentBackgroundIndex + 1) % heroBackgrounds.length;
