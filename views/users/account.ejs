<% layout("/layouts/boilerplate") %>

<style>
/* ACCOUNT PAGE SPECIFIC STYLES */
.account-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

.account-card {
  background: white;
  border-radius: 16px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 10px 25px rgba(0,0,0,0.05);
  margin-bottom: 1.5rem;
  overflow: hidden;
}

.account-card-header {
  padding: 1.5rem 1.5rem 0.5rem 1.5rem;
  border-bottom: 1px solid #f0f0f0;
}

.account-card-body {
  padding: 1.5rem;
}

.account-avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background:  #ff6b6b;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.5rem;
  margin: 0 auto 1rem auto;
}

.input-disabled {
  background-color: #f8f9fa !important;
  color: #6c757d !important;
  border-color: #e9ecef !important;
  cursor: not-allowed !important;
}

.btn-account {
  background: #fe424d;
  color: white;
  border: none;
  padding: 0.5rem 1.5rem;
  border-radius: 8px;
  transition: all 0.3s;
}

.btn-account:hover {
  background: #e53935;
  transform: translateY(-2px);
}

.btn-account-outline {
  border: 1px solid #fe424d;
  color: #fe424d;
  background: transparent;
}

.btn-account-outline:hover {
  background: #fe424d;
  color: white;
}
</style>

<div class="account-container">
  <!-- HEADER -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Account Settings</h3>
    <a href="/profile" class="btn btn-account-outline">
      <i class="fa-solid fa-eye me-1"></i> View Public Profile
    </a>
  </div>

  <!-- ========== CARD 1: BASIC INFO ========== -->
  <div class="account-card">
    <div class="account-card-header">
      <h5 class="mb-0">
        <i class="fa-solid fa-user me-2"></i>Personal Information
      </h5>
    </div>
    
    <div class="account-card-body">
      <!-- Avatar Display -->
      <div class="text-center mb-4">
        <div class="account-avatar">
          <%= user.username.charAt(0).toUpperCase() %>
        </div>
        <h5 class="mb-1"><%= user.legalName || user.username %></h5>
        <p class="text-muted mb-0"><%= user.email %></p>
      </div>

      <!-- Info Fields (READ ONLY - Display only) -->
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Full Name</label>
          <input type="text" class="form-control input-disabled" 
                 value="<%= user.legalName || 'Not set' %>" readonly>
        </div>
        
        <div class="col-md-6">
          <label class="form-label">Username</label>
          <input type="text" class="form-control input-disabled" 
                 value="<%= user.username %>" readonly>
          <small class="text-muted">Username cannot be changed</small>
        </div>
        
        <div class="col-md-6">
          <label class="form-label">Phone Number</label>
          <input type="text" class="form-control input-disabled" 
                 value="<%= user.phone || 'Not added' %>" readonly>
        </div>
        
        <div class="col-md-6">
          <label class="form-label">Email</label>
          <input type="email" class="form-control input-disabled" 
                 value="<%= user.email %>" readonly>
        </div>
        
        <div class="col-12">
          <label class="form-label">Address</label>
          <textarea class="form-control input-disabled" rows="2" readonly><%= user.residentialAddress || 'Not added' %></textarea>
        </div>
        
        <div class="col-12">
          <label class="form-label">Bio</label>
          <textarea class="form-control input-disabled" rows="3" readonly><%= user.bio || 'No bio yet' %></textarea>
        </div>
      </div>
      
      <!-- Edit Button -->
      <div class="text-end mt-4">
        <a href="/account/edit" class="btn btn-account">
          <i class="fa-solid fa-pen-to-square me-1"></i> Edit Information
        </a>
      </div>
    </div>
  </div>

  <!-- ========== CARD 2: SECURITY ========== -->
  <div class="account-card">
    <div class="account-card-header">
      <h5 class="mb-0">
        <i class="fa-solid fa-shield me-2"></i>Security
      </h5>
    </div>
    
    <div class="account-card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h6 class="mb-1">Password</h6>
          <p class="text-muted mb-0">Last changed: 2 weeks ago</p>
        </div>
        <a href="/account/password" class="btn btn-account-outline">
          Change Password
        </a>
      </div>
      
      <hr>
      
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h6 class="mb-1">Login Activity</h6>
          <p class="text-muted mb-0">Last login: Today, 10:30 AM</p>
        </div>
        <button class="btn btn-outline-secondary btn-sm">View History</button>
      </div>
    </div>
  </div>

  <!-- ========== CARD 3: ACCOUNT ACTIONS ========== -->
  <div class="account-card">
    <div class="account-card-header">
      <h5 class="mb-0">
        <i class="fa-solid fa-gear me-2"></i>Account Actions
      </h5>
    </div>
    
    <div class="account-card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <a href="/logout" class="btn btn-outline-dark w-100 py-2">
            <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
          </a>
        </div>
        
        <div class="col-md-6">
          <form action="/account/delete" method="POST" 
                onsubmit="return confirm('Are you absolutely sure? This cannot be undone.');">
            <button type="submit" class="btn btn-outline-danger w-100 py-2">
              <i class="fa-solid fa-trash me-2"></i> Delete Account
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- ========== CARD 4: YOUR LISTINGS ========== -->
  <div class="account-card">
    <div class="account-card-header">
      <h5 class="mb-0">
        <i class="fa-solid fa-house me-2"></i>Your Listings
      </h5>
    </div>
    
    <div class="account-card-body">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h6 class="mb-1">Manage your properties</h6>
          <p class="text-muted mb-0">View, edit, or add new listings</p>
        </div>
        <div>
          <a href="/listings/new" class="btn btn-account-outline me-2">
            <i class="fa-solid fa-plus"></i> Add New
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
